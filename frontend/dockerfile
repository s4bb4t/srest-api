# Этап сборки
FROM golang:1.23.1-alpine AS builder

WORKDIR /app

# Копируем файлы go.mod и go.sum и загружаем зависимости
COPY go.mod go.sum ./
RUN go mod download

# Копируем исходный код и компилируем приложение
COPY . . 
RUN GOOS=linux GOARCH=amd64 go build -o /app/main .

# Финальный образ
FROM alpine:latest

# Устанавливаем Nginx
RUN apk add --no-cache nginx

# Копируем все файлы из папки /app (собранное приложение и статические файлы)
COPY --from=builder /app /usr/local/bin/

# Копируем конфигурацию Nginx
COPY nginx.conf /etc/nginx/nginx.conf

# Открываем порты для приложения и Nginx
EXPOSE 80
EXPOSE 443

# Запускаем Nginx и приложение
CMD ["sh", "-c", "nginx && /usr/local/bin/main"]
